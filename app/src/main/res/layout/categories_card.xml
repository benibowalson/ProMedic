<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cv_Category_Names"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:layout_gravity="center"
    app:cardElevation="4dp"
    android:paddingBottom="@dimen/row_padding"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/row_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgCategory"
            android:layout_width="@dimen/thumbnail"
            android:layout_height="@dimen/thumbnail"
            android:contentDescription="@string/image_content_description"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/row_padding"
            android:layout_marginEnd="@dimen/row_padding"/>

        <TextView
            android:id="@+id/txtCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thumbnail"
            android:layout_toEndOf="@+id/imgCategory"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/contact_name"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/txtCategorySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAilmentName"
            android:layout_toRightOf="@id/thumbnail"
            android:layout_toEndOf="@+id/imgCategory"
            android:textColor="@color/contact_number"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>


</android.support.v7.widget.CardView>